@{
    ViewData["Tittle"] = "Editar Conta"; 
}

<link href="~/css/user.css" rel="stylesheet" />

<section>
    <h2>Editar Conta</h2>
    <hr />
    <form>
        <input class="form-control" required id="username" placeholder="Username" />
        <input class="form-control" required type="email" id="email" placeholder="E-mail" />
        <input class="form-control" required type="password" id="password" name="password" placeholder="Senha" />
        <input class="form-control" required type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirmação de senha" />
        <div class="error">
            <span hidden>Senhas diferentes</span>
        </div>
        <button class="btn btn-primary">Salvar</button>
    </form>
</section>

@section Scripts{
    <script>
        changeMenu('user')
    </script>
}