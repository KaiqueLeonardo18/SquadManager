@model UserViewModel

@{
    Layout = null;
    ViewData["Tittle"] = "Login";
}

<link href="~/css/login.css" rel="stylesheet" />

<section>

    <form>
        <h1>Autenticação</h1>
        <input type="text" id="email" name="email" value="@Model.Email" placeholder="UserName/e-mail"/>
        <input type="password" id="password" required name="password" value="@Model.Password" placeholder="Senha"/>
        <a href="/Login/Forgot">Esqueceu a senha?</a>

        <button type="submit">Login</button>
    </form>

    <label>Não tem conta? <a href="Login/SignUp">Crie aqui</a></label>
</section>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/login.js"></script>